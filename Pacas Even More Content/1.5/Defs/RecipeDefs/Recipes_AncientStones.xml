		<workAmount>40000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Glowstone</li>
					</thingDefs>
				</filter>
				<count>200</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>Rubber</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<BigGlowstoneCrystalTrophy>1</BigGlowstoneCrystalTrophy>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Glowstone</li>
                <li>Rubber</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
    
